<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_compose_tweet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.tweetster.activities.ComposeTweetFragment"
    tools:showIn="@layout/activity_compose_tweet"
    android:padding="16dp">

    <EditText
        android:id="@+id/etTweetBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:gravity="top|left|start"
        />

    <TextView
        android:id="@+id/tvCharCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etTweetBody"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="140 characters remaining"/>

    <Button
        android:id="@+id/btnSubmit"
        android:text="Tweet it!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etTweetBody"
        android:layout_alignRight="@id/etTweetBody"
        android:onClick="onSubmit"/>



</RelativeLayout>
